rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ FIX: Add write permission for user to their own document
    match /users/{userId} {
      allow read, create, update, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // ✅ Leaderboard rules
    match /liveLeaderboard/{slotId}/entries/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /liveLeaderboard/{slotId} {
      allow read: if true;
      allow write: if false;
    }

    // ✅ Quiz history
    match /users/{userId}/quizHistory/{attemptId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
