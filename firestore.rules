rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write to their own document.
    // The 'write' permission covers create, update, and set operations.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write to their own quiz history subcollection.
    match /users/{userId}/quizHistory/{attemptId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read the leaderboard.
    match /liveLeaderboard/{slotId} {
      allow read: if true;
      allow write: if false; // Disallow writing to the container document.
    }

    // Allow authenticated users to write their own entry to the leaderboard.
    match /liveLeaderboard/{slotId}/entries/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
