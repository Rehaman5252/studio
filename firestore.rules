
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read their own quiz history
    match /quizHistory/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to read the live leaderboard
    match /liveLeaderboard/{slotId}/{entry} {
        allow read: if request.auth != null;
        // Writes to the live leaderboard should be handled by a secure backend function
        // but for client-side demo purposes, we'll allow authenticated writes.
        allow write: if request.auth != null;
    }
  }
}
