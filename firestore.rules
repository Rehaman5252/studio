rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can create and update their own quiz history document.
    match /quizHistory/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Live leaderboard data can be read by anyone, but only written to by authenticated users.
    // This is a simplified rule for the demo. In production, you'd likely use a Cloud Function.
    match /liveLeaderboard/{slotId}/{entry} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
