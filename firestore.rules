
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read, create, and update their own profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read the leaderboard, but only logged-in users to write their own entry
    match /liveLeaderboard/{slotId}/entries/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Prevent direct writes to the parent leaderboard document
    match /liveLeaderboard/{slotId} {
      allow read: if true;
      allow write: if false;
    }

    // Allow users to read and write their own quiz history
    match /users/{userId}/quizHistory/{attemptId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
