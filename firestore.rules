rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read, create, and update their own profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Leaderboard entries can be read by anyone.
    // An authenticated user can only create or update their own entry.
    match /liveLeaderboard/{slotId}/entries/{userId} {
        allow read: if true;
        allow create, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
