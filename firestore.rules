rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for any authenticated user.
    // This is a good starting point for development. For production, you would
    // likely want more granular rules (e.g., users can only write to their own documents).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
