rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can only read/write their own document.
    // They cannot view other user documents, except for specific reads (like leaderboards).
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to get documents from the users collection for leaderboards
    match /users/{userId} {
      allow get: if request.auth != null;
    }

    // Quiz history is private to each user.
    match /quizHistory/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Live leaderboard data can be read by any authenticated user.
    // Writing is handled by backend functions/server-side logic (not defined here).
    match /liveLeaderboard/{slotId}/{entries} {
      allow read: if request.auth != null;
    }

    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
