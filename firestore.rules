
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write their own profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Leaderboard entries can be created by any authenticated user.
    // Anyone can read the leaderboard.
    match /liveLeaderboard/{slotId}/entries/{userId} {
       allow read: if true;
       allow create: if request.auth != null && request.auth.uid == userId;
       allow update, delete: if false; // Entries are immutable
    }
  }
}
