
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can create, read, and update their own profile document.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Live leaderboard slots and entries can be read by anyone.
    match /liveLeaderboard/{slotId}/{document=**} {
      allow read: if true;
    }

    // A user can create/update their own entry in the live leaderboard for any slot.
    match /liveLeaderboard/{slotId}/entries/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
