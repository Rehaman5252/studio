
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write their own profile, but other authenticated users can also read it for leaderboards.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow get, list: if request.auth != null; // Allow reading for all-time leaderboard
    }

    // Users can only read and write their own quiz history.
    match /users/{userId}/quizHistory/{historyId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can read the live leaderboard.
    match /liveLeaderboard/{slotId}/entries/{entryUserId} {
       allow read: if request.auth != null;
       // Users can only create or update their own entry.
       allow write: if request.auth != null && request.auth.uid == entryUserId;
    }
  }
}
