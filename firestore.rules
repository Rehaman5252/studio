
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Any authenticated user can create their own document upon signup.
      allow create: if request.auth != null;
      
      // Only the authenticated owner of the document can read or update it.
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Live Leaderboard collection
    match /liveLeaderboard/{slotId}/{document=**} {
      // Anyone can read leaderboard data.
      allow read: if true;
    }

    // Allow authenticated users to create entries in the leaderboard for themselves.
    match /liveLeaderboard/{slotId}/entries/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
